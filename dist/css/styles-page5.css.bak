body, html {
    margin: 0;
    padding: 0;
    height: 100%;
    overflow: hidden;
}

.parallax {
    position: relative;
    height: 100%;
    overflow: hidden;
}

#bgVideo {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transform: translate(-50%, -50%);
    z-index: -1;
}

.content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: white;
    text-align: center;
}

form {
    margin-top: 20px;
}

input, select, button {
    padding: 10px;
    margin: 5px;
    font-size: 16px;
}
